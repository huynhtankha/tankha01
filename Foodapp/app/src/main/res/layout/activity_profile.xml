<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#EDE8E8">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/editproimg"
                    android:layout_width="169dp"
                    android:layout_height="169dp"
                    android:layout_marginTop="80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/profile" />

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/editproimg"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="32dp">

                    <TextView
                        android:id="@+id/tvht"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Họ và tên:"
                        android:textColor="#9C27B0"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/proten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Register"
                        android:textColor="@color/purple_500"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="32dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Email:"
                        android:textColor="#9C27B0"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/proemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Register"
                        android:textColor="@color/purple_500"
                        android:textSize="18dp"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="32dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Số điện thoại:"
                        android:textColor="#9C27B0"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/promobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:padding="10dp"

                        android:text="Register"
                        android:textColor="@color/purple_500"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/nl"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    tools:layout_editor_absoluteX="0dp">

                    <TextView
                        android:id="@+id/pss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Mật khẩu:"
                        android:textColor="#9C27B0"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:inputType="textPassword"
                        android:padding="10dp"

                        android:text="Register"
                        android:textColor="@color/purple_500"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:paddingLeft="70dp"
                        android:src="@drawable/eye_24">

                    </ImageView>
                </LinearLayout>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title="Profile"
                    tools:ignore="MissingConstraints">

                </androidx.appcompat.widget.Toolbar>

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="39dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
                   >

                    <TextView
                        android:id="@+id/quan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Địa chỉ:"
                        android:paddingEnd="10dp"
                        android:textColor="#9C27B0"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Register"
                        android:textColor="@color/purple_500"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/qhuyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="Register"
                        android:textColor="@color/purple_500"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
                    tools:layout_editor_absoluteX="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginStart="39dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/purple_500"
                        android:text="Thành Phố Cần Thơ"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
                    tools:layout_editor_absoluteX="0dp">
                    <androidx.appcompat.widget.AppCompatButton

                        android:id="@+id/sua"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="100dp"
                        android:background="@drawable/backbutton"
                        android:padding="8dp"
                        android:text="Cập nhật thông tin"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp">

                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/facebook"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/background_facebook"
                    android:drawableEnd="@drawable/facebook"
                    android:onClick="openFacebook"
                    android:padding="8dp"
                    android:text="Facebook"
                    android:textColor="@color/purple_500" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tiktok"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/background_facebook"
                    android:drawableEnd="@drawable/google"
                    android:onClick="openTikTok"
                    android:padding="8dp"
                    android:text="TikTok"
                    android:textColor="@color/purple_500" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>