<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE8E8"
    tools:context=".SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sett"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Cài đặt"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sett"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/diendan"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/stiti"
            android:orientation="vertical"
            android:elevation="10dp">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/dd" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Diễn đàn"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:elevation="10dp"
            android:id="@+id/order"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/stiti"
            android:orientation="vertical">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/shopping_cart_24" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Đơn hàng"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/mk"
                app:layout_constraintTop_toBottomOf="@+id/mk" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/gt"
            android:elevation="10dp"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/stiti"
            android:orientation="vertical">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/gt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Giới thiệu"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/mk"
                app:layout_constraintTop_toBottomOf="@+id/mk" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:elevation="10dp"
            android:background="@drawable/stiti"
            android:orientation="vertical">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/map"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Google map"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/mk"
                app:layout_constraintTop_toBottomOf="@+id/mk" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/lh"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/stiti"
            android:elevation="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/lh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Liên hệ"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/mk"
                app:layout_constraintTop_toBottomOf="@+id/mk" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mk"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/stiti"
            android:elevation="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/pa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Đổi mật khẩu"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/mk"
                app:layout_constraintTop_toBottomOf="@+id/mk" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout15"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp">
        <LinearLayout
            android:id="@+id/qr"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/stiti"
            android:elevation="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/baseline_qr_code_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Quét mã QR"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/mk"
                app:layout_constraintTop_toBottomOf="@+id/mk" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"

        android:gravity="center"
        android:elevation="10dp"
        android:background="@drawable/trang"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" >

        <TextView
            android:id="@+id/dangxuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableStart="@drawable/logout_24"
            android:drawablePadding="10dp"
            android:text="Đăng xuất"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>